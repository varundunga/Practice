package evoke.practice.JsonParser;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

import org.apache.commons.net.ftp.FTPClient;

public class Ftpserver {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		
	       FTPClient client = new FTPClient();
	       FileInputStream fis = null;
		    
		  
		  
		    
		    FileOutputStream fos=null;
	       
	       
	       
	      
	       try {
	      
	      
	     client.connect("ftp.dlptest.com");
	      
	      
	     client.login("dlpuser@dlptest.com", "fLDScD4Ynth0p4OJ6bW6qCxjh");
	       
	      
	      
	      
	      
	      
	     // Create an InputStream of the file to be uploaded
	      
	      
	     String filename = "C:\\Users\\vdunga\\Desktop\\Report1.xlsx";
	             
	    fis = new FileInputStream(filename);
	    
	    String filename1="syslogtest_be.txt";
	  
	    
	    fos=new FileOutputStream(filename1);
	    
	       
	      
	      
	     // Store file on server and logout
	      
	      
	     client.storeFile(filename, fis);
	     client.retrieveFile(filename1,fos);
	     String delete="syslogtest_be.txt";
	     boolean exist=client.deleteFile(delete);
	     if(exist)
	     {
	    	 System.out.println("file deleted");
	     }
	     else
	     {
	    	 System.out.println("file not found");
	     }
	      
	     client.logout();
	      
	      
	      
	      
	       } catch (IOException e) {
	      
	      
	     e.printStackTrace();
	      
	       } finally {
	      
	      
	     try {
	      
	      
	         if (fis!= null) {
	      
	      
	      fis.close();
	       
	      
	      
	         }
	      
	      
	         client.disconnect();
	      
	      
	     } catch (IOException e) {
	      
	      
	         e.printStackTrace();
	      
	      
	     }
	      
	       }
	}

}
